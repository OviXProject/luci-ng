{
  "widget": "set-section",
  "options": { "title": "DHCP" },
  "events": {
    "onSetup": "$self.leases = ubus('luci-rpc','getDHCPLeases', 5000)"
  },
  "content": [
    {
      "widget": "set-level",
      "options": {
        "title": "DHCP Leases",
        "value=": "leases.dhcp_leases.length",
        "unit": "leased ip",
        "format": "number:'1.0-0'",
        "icon": "ip-network-outline",
        "noGraph": true,
        "noExpand=": "!leases.dhcp_leases.length"
      },
      "content": [
        {
          "widget": "table",
          "options": {
            "columns": ["hostname", "ipaddr", "macaddr", "expires"],
            "headers": {
              "hostname": "Hostname",
              "ipaddr": "IPaddr",
              "macaddr": "MACaddr",
              "expires": "Expires"
            },
            "colFormat": ["", "", "", "duration:'d hh:mm:ss'"],
            "dataSource=": "leases.dhcp_leases.map(row => (row.expires*=1000, row))"
          }
        }
      ]
    },
    {
      "widget": "set-level",
      "options": {
        "title": "DHCPv6 Leases",
        "value=": "leases.dhcp6_leases.length",
        "unit": "leased ip",
        "format": "number:'1.0-0'",
        "icon": "ip-network-outline",
        "noGraph": true,
        "noExpand=": "!leases.dhcp6_leases.length"
      },
      "content": [
        {
          "widget": "table",
          "options": {
            "columns": ["hostname", "ip6addr", "macaddr", "expires"],
            "headers": {
              "hostname": "Hostname",
              "ip6addr": "IPaddr",
              "macaddr": "MACaddr",
              "expires": "Expires"
            },
            "colFormat": ["", "", "", "duration:'d hh:mm:ss'"],
            "dataSource=": [
              "leases.dhcp6_leases.map(row => {",
              "  ip6addr: row.ip6addr, macaddr: row.macaddr, ",
              "  expires: row.expires * 1000, hostname: row.hostname || '', row})"
            ]
          }
        }
      ]
    }
  ]
}
