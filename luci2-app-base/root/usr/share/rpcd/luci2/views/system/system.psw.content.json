{
  "widget": "form",
  "content": [
    {
      "widget": "input",
      "bind": "$.psw1",
      "options": {
        "title": "New password",
        "type": "string",
        "inputType": "password",
        "minLength": 5,
        "required": true
      }
    },
    {
      "widget": "input",
      "bind": "$.psw2",
      "options": {
        "title": "Retype password",
        "inputType": "password",
        "const=": "$.psw1",
        "required": true
      }
    },
    {
      "widget": "button",
      "options": { "title": "Cancel" },
      "events": { "onClick": "$dlg.close()" }
    },
    {
      "widget": "button",
      "options": {
        "title": "Change",
        "disabled=": "!$form.valid"
      },
      "events": {
        "onClick": [
          "ubus('luci2.system', 'password_set', {user:$user, password: $.pss1}) === null ? ",
          "  $dlg.close() && snackbar('Password successfully changed') : ",
          "  scnackbar('Failed to change the system password')"
        ]
      }
    }
  ]
}
