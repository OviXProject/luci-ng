{
  "name": "luci2-ui-core",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --aot",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint --type-check && prettier -l \"src/**/*.{ts,scss,css,html,json}\" ",
    "lint-fix": "ng lint --type-check --fix && prettier --write \"src/**/*.{ts,scss,css,html,json}\" ",
    "publish": "sed -i -e \"s|base href=\\\"/\\\"|base href=\\\"/luci-ng/\\\"|\" dist/index.html && scp -r -P 8022 dist/* root@35.208.122.24:/www/luci-ng/ && scp -r -P 8022 share/* root@35.208.122.24:/usr/share/",
    "gen-schema": "rm -rf dist/widgetschema && rx-json-ui g -p ./src/tsconfig.app.json -m app/app.module#AppModule dist/widgetschema",
    "lint-views": "rx-json-ui l -s dist/widgetschema/widgets.json schemas/views/**/*.view.json && rx-json-ui l -s dist/widgetschema/widgets.content.json schemas/views/**/*.content.json && rx-json-ui l -s dist/widgetschema/schema.json schemas/uci/*.json",
    "openwrt": "docker run -d --privileged -p 9443:443 -p 9080:80 -p 9022:22 --name openwrt ianchi74/openwrt:luci2-rpc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged --pattern \"*.{ts,scss,css,html}\""
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.14",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/router": "^8.2.14",
    "core-js": "^3.6.3",
    "espression": "^1.3.1",
    "espression-jsonpath": "^0.1",
    "espression-rx": "^0.3.1",
    "rx-json-ui": "0.0.1",
    "rxjs": "^6.5.4",
    "web-animations-js": "^2.3.2",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.23",
    "@angular/cli": "^8.3.22",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "codelyzer": "^5.2.1",
    "husky": "^4.0.7",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rx-json-ui-cli": "0.0.4",
    "tslint": "^5.20.1",
    "typescript": "~3.5.3"
  }
}
