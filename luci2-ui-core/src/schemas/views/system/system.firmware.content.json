{
  "widget": "form",
  "content": [
    {
      "widget": "span",
      "options": {
        "text=": "$model.files[0].name || 'Select file'"
      }
    },
    {
      "widget": "file-button",
      "bind": "$model.files",
      "options": {
        "title": "Select"
      },
      "events": {
        "onInit": "$model.result = null",
        "onAdded": "$model.result = cgi.upload('/tmp/backup.tar.gz','0400', $model.files[0])"
      }
    },
    {
      "widget": "span",
      "options": {
        "text=": "JSON.stringify($model.result) "
      }
    },
    {
      "widget": "toggle",
      "bind": "$model.keep",
      "options": {
        "title": "Keep settings",
        "default": true
      }
    },
    {
      "widget": "button",
      "options": { "title": "Cancel" },
      "events": { "onClick": "$dlg.close()" }
    },
    {
      "widget": "button",
      "options": {
        "title": "Upload",
        "disabled=": "!$model.files || !$model.files.length"
      },
      "events": { "onClick": " $dlg.close() && snackbar(`flashing device`) " }
    }
  ]
}
