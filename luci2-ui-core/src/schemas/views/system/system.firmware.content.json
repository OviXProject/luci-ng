{
  "widget": "form",
  "content": [
    {
      "widget": "span",
      "options": {
        "text=": "_.files[0].name || 'Select file'"
      }
    },
    {
      "widget": "file-button",
      "bind": "_.files",
      "options": {
        "title": "Select"
      },
      "events": {
        "onInit": "_.result = null",
        "onAdded": "_.result = cgi.upload('/tmp/backup.tar.gz','0400', _.files[0])"
      }
    },
    {
      "widget": "span",
      "options": {
        "text=": "JSON.stringify(_.result) "
      }
    },
    {
      "widget": "toggle",
      "bind": "_.keep",
      "options": {
        "title": "Keep settings",
        "default": true
      }
    },
    {
      "widget": "button",
      "options": { "title": "Cancel" },
      "events": { "onClick": "$dlg.close()" }
    },
    {
      "widget": "button",
      "options": {
        "title": "Upload",
        "disabled=": "!_.files || !_.files.length"
      },
      "events": { "onClick": " $dlg.close() && snackbar(`flashing device`) " }
    }
  ]
}
