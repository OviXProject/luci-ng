{
  "widget": "form",

  "content": [
    {
      "widget": "input",
      "bind": "_.widget",
      "options": {
        "title": "Widget",
        "description": "Enter widget definition",
        "required": true
      }
    },
    {
      "widget": "button",
      "bind": "_.update",
      "options": {
        "title": "Update",
        "click": "JSON.parse(_.widget)"
      }
    },
    {
      "widget": "dynamic",
      "options": { "widget=": "_.update" }
    }
  ]
}
